<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/task_item_padding">

    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="@dimen/task_tickbox_width"
        android:layout_height="@dimen/task_item_height"
        android:paddingRight="@dimen/task_tickbox_padding_right"
        tools:srcCompat="@drawable/ic_unchecked_box"/>

    <TextView
        style="@style/TextView"
        android:id="@+id/task_item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/task_item_height"
        android:textColor="@color/text"
        android:gravity="center_vertical"/>

    <TextView
        style="@style/TextView"
        android:id="@+id/task_item_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_item_height"
        android:textColor="@color/text"
        android:textAlignment="textEnd"/>

</LinearLayout>
