console.log("ZADANIE 1")
var string = "bardzodluginapis";
string=string.split("");
var countchars = string.reduce(function (chars, char) { 
  if (char in chars) {
    chars[char]++;
  }
  else {
    chars[char] = 1;
  }
  return chars;
}, {});
console.log(countchars)


