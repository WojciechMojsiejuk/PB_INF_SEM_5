console.log("ZADANIE 2")
function filtr_co_drugi(item,index)
{
   if(index%2==0)return item;
}

let tablica=[2,5,7,8,9,3,5,6,8,6,1,5,2,2,9];

tablica=tablica.filter(filtr_co_drugi);

let tablica2=tablica.map(function(x){
  return (x=(x-Math.min(...tablica))/
    (Math.max(...tablica)-Math.min(...tablica))).toFixed(2);
})
console.log(tablica2);


