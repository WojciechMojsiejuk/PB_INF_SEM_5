console.log("ZADANIE 4")

class Person{
  constructor()
  {
    this.salary=0;
  }   
  wypisz()
  {
    console.log("konto: "+this.salary);
  }
}
class PersonWp extends Person
  {
    constructor(){
      super();
    }
    wplac(salary){
      this.salary=salary+this.salary;
    }
  }
class PersonWy extends Person
  {
    constructor(){
      super();
    }
    wyplac(salary)
    {
      this.salary=this.salary-salary;
    }
  }
class PersonWpy extends Person
  {
    constructor(){
      super();
    }
    wplac(salary){
      this.salary=salary+this.salary;
    }
    wyplac(salary)
    {
      this.salary=this.salary-salary;
    }
    
  }



function zadanie4(number1,number2,number3){
  let konta = new Array(number1+number2+number3).fill(0);
  konta=konta.map(fillwithkonta)
  konta.forEach(operacjakonta)
  console.log(konta);
  konta.forEach(wypisanie)
  function fillwithkonta(element,index,array)
  {
    if(index<number1)
      {
        
        return new PersonWp()
      }
    if(index<(number1+number2))
      {
        
        return new PersonWy()
      }
    else return new PersonWpy()
  }
  function operacjakonta(element)
  {
    if(element.wplac)
      {
        element.wplac(50);
        
      }
    if(element.wyplac)
      {
        element.wyplac(20);
      }
  }
  function wypisanie(element)
  {
    element.wypisz();
  }
  
  
}
zadanie4(3,3,3);
